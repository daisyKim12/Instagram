<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp">

    <ImageView
        android:id="@+id/img_post"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_more_than_one"
        android:layout_width="23dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_margin="4dp"
        android:visibility="visible"
        android:src="@color/grayForGallery"
        android:elevation="3dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/white"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_more_than_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="@+id/img_more_than_one"
        app:layout_constraintStart_toStartOf="@+id/img_more_than_one"
        app:layout_constraintBottom_toBottomOf="@+id/img_more_than_one"
        app:layout_constraintTop_toTopOf="@+id/img_more_than_one"
        />
    <ImageView
        android:id="@+id/blurred"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/stroke_post_reels"
        android:visibility="invisible"
        app:tint="@color/blurred"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>