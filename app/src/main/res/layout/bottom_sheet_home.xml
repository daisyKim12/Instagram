<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/transparent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <ImageView
        android:id="@+id/btn_share"
        android:layout_width="75dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,4:5"
        android:src="@drawable/bottom_sheet_btn_top1"
        app:layout_constraintEnd_toStartOf="@+id/btn_link"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/btn_link"
        android:layout_width="75dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,4:5"
        android:src="@drawable/bottom_sheet_btn_top2"
        app:layout_constraintEnd_toStartOf="@+id/btn_save"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_share"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/btn_save"
        android:layout_width="75dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,4:5"
        android:src="@drawable/bottom_sheet_btn_top3"
        app:layout_constraintEnd_toStartOf="@+id/btn_qr"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_link"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/btn_qr"
        android:layout_width="75dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,4:5"
        android:src="@drawable/bottom_sheet_btn_top4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_save"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/btn_link"/>

    <ImageView
        android:id="@+id/btn1_add_to_like"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/bottom_sheet_btn1"
        app:layout_constraintDimensionRatio="H,10:64"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        android:layout_marginVertical="8dp"/>

    <ImageView
        android:id="@+id/btn2_follow_cancel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/bottom_sheet_btn2"
        app:layout_constraintDimensionRatio="H,10:64"
        app:layout_constraintTop_toBottomOf="@id/btn1_add_to_like"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        android:layout_marginVertical="8dp"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/btn2_follow_cancel"/>

    <ImageView
        android:id="@+id/btn3_info"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/bottom_sheet_btn3"
        app:layout_constraintDimensionRatio="H,10:64"

        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        android:layout_marginVertical="8dp"/>

    <ImageView
        android:id="@+id/btn4_hide"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/bottom_sheet_btn4"
        app:layout_constraintDimensionRatio="H,10:64"
        app:layout_constraintTop_toBottomOf="@id/btn3_info"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        android:layout_marginVertical="8dp"/>

    <ImageView
        android:id="@+id/btn5_hide"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/bottom_sheet_btn5"
        app:layout_constraintDimensionRatio="H,10:64"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/btn4_hide" />


</androidx.constraintlayout.widget.ConstraintLayout>