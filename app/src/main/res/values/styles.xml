<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#F5F7FD</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlActivated">@color/blackForText</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/login_unclicked</item>
        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/login_unclicked</item>

        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/login_unclicked</item>


        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
<!--        <item name="colorAccent">@color/blackForText</item>-->
<!--        <item name="colorControlNormal">@color/blackForText</item>-->
<!--        <item name="colorControlActivated">@color/blackForText</item>-->
    </style>
</resources>