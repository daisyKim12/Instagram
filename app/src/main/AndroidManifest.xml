        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup"
        android:requestLegacyExternalStorage="true">

        <activity
            android:name="com.project.Instargram.kotlin.src.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.project.Instargram.kotlin.src.login.activity.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Login"/>
        <!--android:windowSoftInputMode="adjustResize"-->

        <activity
            android:name="com.project.Instargram.kotlin.src.main.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Main"
            android:usesCleartextTraffic="true">

        </activity>

        <activity
            android:name="com.project.Instargram.kotlin.src.main.post.PostImageActivity"
