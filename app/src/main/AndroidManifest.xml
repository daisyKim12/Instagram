<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.project.Instargram.kotlin" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name="com.project.Instargram.kotlin.config.ApplicationClass"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup"
        android:requestLegacyExternalStorage="true">

        <activity
            android:name="com.project.Instargram.kotlin.src.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Login" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.project.Instargram.kotlin.src.login.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Login"/>
<!--        android:windowSoftInputMode="adjustResize"-->

        <activity
            android:name="com.project.Instargram.kotlin.src.main.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Main"
            android:usesCleartextTraffic="true"/>

        <activity
            android:name="com.project.Instargram.kotlin.src.main.post.PostImageActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Main"
            android:usesCleartextTraffic="true" />

        <activity
            android:name="com.project.Instargram.kotlin.src.main.post.PostStyleActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Main"
            android:usesCleartextTraffic="true" />

        <activity
            android:name="com.project.Instargram.kotlin.src.main.post.PostStyleRvActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Main"
            android:usesCleartextTraffic="true" />

        <activity
            android:name="com.project.Instargram.kotlin.src.main.post.PostFinalActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Main"
            android:usesCleartextTraffic="true" >
        </activity>

        <!--creating new account -->
        <activity
            android:name="com.project.Instargram.kotlin.src.login.EnterPhoneActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Login"/>
        <activity
            android:name="com.project.Instargram.kotlin.src.login.EnterCertificationActivity"
